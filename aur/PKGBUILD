pkgname=vglog-filter
pkgver=1.0.0
pkgrel=1
pkgdesc="A log filtering tool for Valgrind logs."
arch=('x86_64')
url="https://github.com/eserlxl/vglog-filter"
license=('GPL3')
depends=()
makedepends=('cmake' 'make' 'gcc')
source=("https://github.com/eserlxl/vglog-filter/releases/download/v1.0.0/vglog-filter-1.0.0.tar.gz")
b2sums=('daf59da80b0f605072f48555548e8a198e02e03e706c9e2e9c68030030e4bbc0bea69140c42c5f62d222b1b7c4259ef3e7bea90a4874922302f1e9993b54af6b')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  bash ./build.sh performance warnings
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm755 build/vglog-filter "${pkgdir}/usr/bin/vglog-filter"
} 
